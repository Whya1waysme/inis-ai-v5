{
  "version": 2,
  "trailingSlash": false,
  "env": {
    "FASTAPI_ROOT_PATH": "/api"
  },
  "builds": [
    {
      "src": "frontend/inis-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "^/api$", "dest": "/backend/api/index.py" },
    { "src": "^/api/(.*)$", "dest": "/backend/api/index.py" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
